<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/nombreDocumento"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:clickable="true"
        android:focusable="true"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/tipoImagenDocumento"
        app:layout_constraintStart_toEndOf="@+id/tipoImagenDocumento"
        app:layout_constraintTop_toTopOf="@+id/tipoImagenDocumento" />

    <ImageView
        android:id="@+id/tipoImagenDocumento"
        android:layout_width="46dp"
        android:layout_height="37dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:contentDescription="@string/file"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/file" />
</androidx.constraintlayout.widget.ConstraintLayout>